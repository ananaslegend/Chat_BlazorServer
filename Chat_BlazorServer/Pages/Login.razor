@page "/login"
@using Blazored.LocalStorage
@using Chat_BlazorServer.Domain.DTOs
@inject NavigationManager NavManager
@inject HttpClient _httpClient
@inject ILocalStorageService _localStorage

<h3>Log in, please</h3>

<EditForm Model="user" OnSubmit="HandleLogin">
    <div class="form-group" style="padding-bottom: 20px;">
        <label for="login">Your Login</label>
        <InputText id="login" class="form-controll" @bind-Value="user.UserName"/>
    </div>
    <div class="form-group" style="padding-bottom: 20px;">
        <label for="password">Password</label>
        <InputText id="password" class="form-controll" @bind-Value="user.Password" type="password"/>
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
</EditForm>



@code
{
    private UserLoginDTO user = new();

    private async void HandleLogin()
    {
        var response = await _httpClient.PostAsJsonAsync("https://localhost:7001/api/Login/login", user);

        if(response.IsSuccessStatusCode)
        {
            await SaveToken(response);
        }
    }

     private async Task SaveToken(HttpResponseMessage response)
     {
        var responseContent = await response.Content.ReadAsStringAsync();

        await _localStorage.SetItemAsync<string>("authToken", responseContent);
     }
}